<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.followernotif">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenotif"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/login"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/namenotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selim Mouelhi"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

        <Button
            android:id="@+id/acceptnotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:layout_gravity="center"
            android:textColor="@color/blueend"
            android:text="Accept"
            android:textAllCaps="false"
            android:layout_weight="1"
            />
            <Button
                android:id="@+id/declinenotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/whiteColor"
                android:layout_gravity="center"
                android:textColor="@color/blueend"
                android:text="Decline "
                android:textAllCaps="false"
                android:layout_weight="1"
                />

        </LinearLayout>

        <Button
            android:id="@+id/viewprofilenotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:layout_gravity="center"
            android:textColor="@color/blueend"
            android:text="View Profile"
            android:textAllCaps="false"
            android:layout_weight="1"
            />


    </LinearLayout>
</FrameLayout>