<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.MyFriends">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/listbuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/myfriends"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginLeft="160dp"
            android:src="@drawable/ic_tab_unselected_black_24dp" />

        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/allusers"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_select_all_black_24dp"
            android:layout_gravity="end"
            />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/listfriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listbuttons"

        />

    <TextView
        android:id="@+id/nofriends"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="You have no friends yet try adding some" />


</RelativeLayout>

</FrameLayout>